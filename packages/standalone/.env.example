# Node Environment
NODE_ENV=development

# Server Configuration
API_PORT=3001

# Authentication
JWT_SECRET=your-jwt-secret-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# Database
DATABASE_URL=file:./data/openrevenue.db

# Sync Configuration
SYNC_INTERVAL=24

# Web UI
WEB_UI_ENABLED=true
STARTUP_NAME=My Startup
STARTUP_DESCRIPTION=Transparent revenue tracking for my SaaS

# Data Signing (optional - will be auto-generated if not provided)
# SIGNING_PRIVATE_KEY=base64-encoded-private-key

# OpenRevenue Platform (optional)
# OPENREVENUE_PLATFORM_URL=https://openrevenue.org

# CORS (comma-separated origins, or * for all)
ALLOWED_ORIGINS=*

# Payment Providers (for direct sync)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# PADDLE_VENDOR_ID=your-paddle-vendor-id
# PADDLE_API_KEY=your-paddle-api-key
