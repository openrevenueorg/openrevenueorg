# OpenRevenue Production Environment Variables
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control!

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Database (PostgreSQL 15+)
# For Supabase: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
# For local: postgresql://user:password@localhost:5432/openrevenue
DATABASE_URL=postgresql://user:password@host:5432/openrevenue

# Redis (Redis 7+)
# For Upstash: rediss://default:[PASSWORD]@[ENDPOINT].upstash.io:6379
# For local: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# Authentication - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32
BETTER_AUTH_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# Application URLs (MUST match your production domain)
NEXTAUTH_URL=https://yourdomain.com
BETTER_AUTH_URL=https://yourdomain.com
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Encryption - Generate with: openssl rand -hex 32 (must be 64 characters)
ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# Data Signing - Generate with: pnpm keys:generate
SIGNING_PRIVATE_KEY=CHANGE_ME_GENERATE_WITH_PNPM_KEYS_GENERATE

# =============================================================================
# OAUTH PROVIDERS (Optional)
# =============================================================================

# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =============================================================================
# PAYMENT PROCESSORS (Optional)
# =============================================================================

# Stripe
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Paddle
# Get from: https://vendors.paddle.com/authentication
PADDLE_VENDOR_ID=
PADDLE_API_KEY=
PADDLE_PUBLIC_KEY=

# Lemon Squeezy
# Get from: https://app.lemonsqueezy.com/settings/api
LEMON_SQUEEZY_API_KEY=

# PayPal
# Get from: https://developer.paypal.com/dashboard/applications
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# =============================================================================
# EMAIL (Optional but recommended)
# =============================================================================

# Resend
# Get from: https://resend.com/api-keys
RESEND_API_KEY=
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================

# Sentry (Error tracking)
# Get from: https://sentry.io/settings/projects/
SENTRY_DSN=

# Plausible (Privacy-friendly analytics)
# Get from: https://plausible.io/settings
PLAUSIBLE_DOMAIN=yourdomain.com

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

ENABLE_PADDLE=true
ENABLE_LEMON_SQUEEZY=true
ENABLE_PAYPAL=false

# =============================================================================
# RUNTIME CONFIGURATION (Optional - defaults provided)
# =============================================================================

# Node environment
NODE_ENV=production

# Application port (Docker default: 5100)
PORT=5100
HOSTNAME=0.0.0.0

# Skip database migrations on startup (useful for zero-downtime deployments)
SKIP_MIGRATIONS=false

# Run database seed on startup (NOT RECOMMENDED for production)
RUN_SEED=false

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# STANDALONE APP VARIABLES (If using standalone deployment)
# =============================================================================

# JWT & Session - Generate with: openssl rand -base64 32
STANDALONE_JWT_SECRET=
STANDALONE_SESSION_SECRET=

# Signing key - Generate with: pnpm keys:generate in standalone package
STANDALONE_SIGNING_PRIVATE_KEY=

# Configuration
STANDALONE_SYNC_INTERVAL=24
STANDALONE_WEB_UI_ENABLED=true
STANDALONE_STARTUP_NAME=Your Startup Name
STANDALONE_STARTUP_DESCRIPTION=Brief description of your startup

# Standalone payment processor credentials
STANDALONE_STRIPE_SECRET_KEY=
STANDALONE_PADDLE_API_KEY=

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Generate secrets securely:
#    - openssl rand -base64 32  # For secrets
#    - openssl rand -hex 32     # For encryption key
#    - pnpm keys:generate       # For signing keys
#
# 2. For Vercel deployment, add these in Project Settings → Environment Variables
#
# 3. For Docker/VPS deployment, create .env.production file with these values
#
# 4. For Coolify deployment, add these in Application → Environment Variables
#
# 5. Never commit .env.production to version control!
#    It's already in .gitignore
#
# =============================================================================
