// OpenRevenue Platform Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== Authentication & Users =====

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  emailVerified Boolean  @default(false)
  emailVerifiedAt DateTime?
  name          String?
  image         String?
  // Social network profiles
  twitter       String?  // X/Twitter username or URL
  linkedin      String?  // LinkedIn profile URL or username
  github        String?  // GitHub username or URL
  instagram     String?  // Instagram username or URL
  facebook      String?  // Facebook profile URL or username
  youtube       String?  // YouTube channel URL or username
  tiktok        String?  // TikTok username or URL
  threads       String?  // Threads username or URL
  medium        String?  // Medium profile URL or username
  website       String?  // Personal website/blog URL
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  accounts Account[]
  sessions Session[]
  startups Startup[]

  @@map("users")
}

model Account {
  id                   String    @id @default(cuid())
  userId               String
  type                 String?
  accountId            String // Better Auth uses accountId instead of providerAccountId
  providerId           String // Better Auth uses providerId instead of provider
  refreshToken         String?   @db.Text
  accessToken          String?   @db.Text
  accessTokenExpiresAt DateTime? // Better Auth uses DateTime instead of Int
  idToken              String?   @db.Text
  scope                String?
  password             String? // For email/password authentication
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  expiresAt            DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  refreshTokenExpiresAt DateTime?

  @@unique([providerId, accountId])
  @@map("accounts")
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique // Better Auth uses token instead of sessionToken
  userId    String
  expiresAt DateTime // Better Auth uses expiresAt instead of expires
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ===== Startups & Profiles =====

model Startup {
  id          String    @id @default(cuid())
  slug        String    @unique
  name        String
  description String?   @db.Text
  website     String?
  logo        String?
  categoryId  String?
  foundedDate DateTime?
  currency    String    @default("USD") // Default currency for this startup
  isPublished Boolean   @default(false)
  isFeatured  Boolean   @default(false)
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  category         Category?         @relation(fields: [categoryId], references: [id])
  privacySettings  PrivacySettings?
  connections      DataConnection[]
  revenueSnapshots RevenueSnapshot[]
  milestones       Milestone[]
  stories          Story[]
  achievements     Achievement[]
  leaderboardEntry LeaderboardEntry?

  @@index([userId])
  @@index([categoryId])
  @@index([isPublished])
  @@index([isFeatured])
  @@map("startups")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  icon        String?
  createdAt   DateTime @default(now())

  startups Startup[]

  @@map("categories")
}

model PrivacySettings {
  id                String   @id @default(cuid())
  startupId         String   @unique
  showRevenue       String   @default("public") // public, range, hidden
  showMRR           String   @default("public")
  showCustomerCount String   @default("public")
  showGrowthRate    Boolean  @default(true)
  historicalMonths  Int      @default(12)
  updatedAt         DateTime @updatedAt

  startup Startup @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@map("privacy_settings")
}

// ===== Data Connections =====

enum TrustLevel {
  SELF_REPORTED
  PLATFORM_VERIFIED
}

model DataConnection {
  id        String @id @default(cuid())
  startupId String
  type      String // direct, standalone
  provider  String // stripe, paddle, lemon_squeezy, paypal
  name      String // User-friendly name for this connection

  // For direct integrations
  encryptedApiKey String? @db.Text
  encryptedSecret String? @db.Text

  // For standalone app integrations
  endpoint         String?
  standaloneApiKey String? @db.Text
  publicKey        String? @db.Text // For verifying signatures

  // Trust level fields
  trustLevel       TrustLevel @default(SELF_REPORTED)
  verificationMethod String?
  lastVerifiedAt   DateTime?

  isActive       Boolean   @default(true)
  lastSyncedAt   DateTime?
  lastSyncStatus String? // success, error, pending
  lastSyncError  String?   @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  startup Startup @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@index([startupId])
  @@index([isActive])
  @@index([trustLevel])
  @@map("data_connections")
}

// ===== Revenue Data =====

model RevenueSnapshot {
  id        String   @id @default(cuid())
  startupId String
  date      DateTime @db.Date

  // Core metrics
  revenue       Float
  mrr           Float?
  arr           Float?
  customerCount Int?
  currency      String @default("USD")

  // Growth metrics
  growthRate Float? // Month-over-month growth percentage
  churnRate  Float?

  // Metadata
  sourceType String // direct, standalone
  sourceId   String? // connection ID
  dataHash   String? // For detecting duplicates
  isVerified Boolean @default(false)

  // Trust level fields
  trustLevel TrustLevel @default(SELF_REPORTED)
  verifiedBy String? // "platform", "self", etc.

  createdAt DateTime @default(now())

  startup Startup @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@unique([startupId, date, sourceId])
  @@index([startupId])
  @@index([date])
  @@index([trustLevel])
  @@map("revenue_snapshots")
}

// ===== Milestones & Stories =====

model Milestone {
  id          String    @id @default(cuid())
  startupId   String
  type        String // mrr_milestone, customer_milestone, custom
  title       String
  description String?   @db.Text
  targetValue Float?
  achievedAt  DateTime?
  isPublic    Boolean   @default(true)
  createdAt   DateTime  @default(now())

  startup Startup @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@index([startupId])
  @@map("milestones")
}

model Story {
  id          String    @id @default(cuid())
  startupId   String
  title       String
  content     String    @db.Text
  slug        String
  isPublished Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  startup Startup @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@unique([startupId, slug])
  @@index([startupId])
  @@index([isPublished])
  @@map("stories")
}

model Achievement {
  id          String   @id @default(cuid())
  startupId   String
  type        String // early_adopter, consistent_growth, transparency_champion
  title       String
  description String?
  earnedAt    DateTime @default(now())
  icon        String?

  startup Startup @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@index([startupId])
  @@map("achievements")
}

// ===== Leaderboard & Analytics =====

// Materialized view for leaderboard (refreshed hourly)

model LeaderboardEntry {
  id            String   @id @default(cuid())
  startupId     String   @unique
  rank          Int
  mrr           Float?
  arr           Float?
  totalRevenue  Float
  customerCount Int?
  growthRate    Float?
  currency      String
  lastUpdated   DateTime @default(now())

  startup Startup @relation(fields: [startupId], references: [id], onDelete: Cascade)

  @@index([rank])
  @@map("leaderboard_entries")
}

// ===== Background Jobs & Logs =====

model SyncLog {
  id               String    @id @default(cuid())
  connectionId     String
  status           String // success, error, pending
  recordsProcessed Int?
  error            String?   @db.Text
  startedAt        DateTime  @default(now())
  completedAt      DateTime?

  @@index([connectionId])
  @@index([status])
  @@map("sync_logs")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}
