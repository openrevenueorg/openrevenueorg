# OpenRevenue Platform - Environment Variables


# Database
DATABASE_URL=postgresql://openrevenue:development@localhost:5432/openrevenue

# Redis
REDIS_URL=redis://localhost:6379

# NextAuth
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:5100
NEXT_PUBLIC_APP_URL=http://localhost:5100

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Encryption
ENCRYPTION_KEY=your-64-char-hex-encryption-key-change-in-production
BETTER_AUTH_URL=http://localhost:5100 # Base URL of your app
BETTER_AUTH_SECRET=your-better-auth-secret-change-in-production
SIGNING_PRIVATE_KEY=your-signing-private-key-change-in-production

# Payment Processors (for direct integrations)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
PADDLE_VENDOR_ID=your-paddle-vendor-id
PADDLE_API_KEY=your-paddle-api-key
PADDLE_PUBLIC_KEY=your-paddle-public-key
LEMON_SQUEEZY_API_KEY=your-lemon-squeezy-api-key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Email
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@openrevenue.org

# Analytics
PLAUSIBLE_DOMAIN=localhost:5100
SENTRY_DSN=https://your-sentry-dsn

# Feature Flags
ENABLE_PADDLE=true
ENABLE_LEMON_SQUEEZY=true
ENABLE_PAYPAL=false

# Development
NODE_ENV=development